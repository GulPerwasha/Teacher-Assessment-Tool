  "shortcuts": [
    {
      "name": "New Observation",
      "short_name": "Observe",
      "description": "Create a new student observation",
      "url": "/assessments/new",
      "icons": [
        {
          "src": "/shortcut-observation.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View analytics dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Students",
      "short_name": "Students",
      "description": "Manage students",
      "url": "/students",
      "icons": [
        {
          "src": "/shortcut-students.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshot-desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard view showing analytics and insights"
    },
    {
      "src": "/screenshot-mobile-observation.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile observation creation interface"
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+teacherapp",
      "url": "/?action=%s"
    }
  ],
  
  "share_target": {
    "action": "/assessments/new",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "observation",
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*"]
        },
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "handle_links": "preferred"
}